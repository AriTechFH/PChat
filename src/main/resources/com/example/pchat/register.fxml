<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pchat.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Register"  />
    <Label fx:id="usernameLabel" layoutX="36.0" layoutY="119.0" text="Username" />
    <TextField fx:id="username" layoutX="36.0" layoutY="136.0" prefHeight="25.0" prefWidth="179.0" promptText="Username" />
    <Label fx:id="passwordLabel" layoutX="36.0" layoutY="176.0" text="Password" />
    <PasswordField fx:id="password" layoutX="36.0" layoutY="193.0" prefHeight="25.0" prefWidth="179.0" promptText="Password" />
    <Button onAction="#onLoginClick" fx:id="loginButton" layoutX="35.0" layoutY="245.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="245.0" text="Log in" />
    <Button onAction="#onRegisterClick" fx:id="registerButton" layoutX="35.0" layoutY="245.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="245.0" text="Sign Up" />
</VBox>
